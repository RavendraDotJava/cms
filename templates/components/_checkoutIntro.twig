{% import 'partials/_macros' as helpers %}

{% set defaults = {
  'heading' : '',
  'textContent' : '',
  'step': '',
} %}

{% if settings is defined %}
  {% set settings = defaults|merge(settings) %}
{% else %}
  {% set settings = defaults %}
{% endif %}

<div class="text-p26 font-normal mb-p24">{{ settings.step }}</div>
{% if settings.heading %}
  {{ settings.heading.set({ class: 'mb-p24' })|raw }}
{% endif %}
<div class="c-content mb-p24">{{ settings.textContent }}</div>