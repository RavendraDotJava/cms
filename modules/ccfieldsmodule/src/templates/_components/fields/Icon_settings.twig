{% import "_includes/forms" as forms %}

{% set instructions = 'Choose the sets to include in the icon picker. Note: these sets are pulled directly from the icons SVG file.' %}
{% if options is empty %}
  {% set instructions = 'It appears as though not icon sets are defined in the icons SVG file. The field will make all icons available.' %}
{% endif %}

{{ forms.checkboxGroupField({
	id: 'sets',
	label: 'Icon Sets',
	instructions: instructions|t,
	name: 'sets',
	values: sets,
	options: options
	})
}}